// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  username String?
  role     Role
  password String

  @@map("users")
}

enum Role {
  ADMIN
  SUPER_ADMIN
  BIDDER
  SELLER
}


model Bid {
  id Int @id @default(autoincrement())
  


  @@map("bids")
}